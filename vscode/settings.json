{
    "files.autoSave": "afterDelay",
    "window.titleBarStyle": "custom",
    "window.customMenuBarAltFocus": false,
    "window.zoomLevel": -1,
    "remote.SSH.useLocalServer": true,
    "editor.renderWhitespace": "all",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "[c]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.rulers": [
            80
        ],
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[cpp]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.rulers": [
            80
        ],
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.rulers": [
            80
        ],
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "[makefile]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false
    },
    "[html]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[xml]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[shellscript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "cmake.configureOnOpen": true,
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "github.copilot.nextEditSuggestions.enabled": true,
    "hediet.vscode-drawio.resizeImages": null,
    "hediet.vscode-drawio.codeLinkActivated": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "git.confirmSync": false,
    "notebook.output.scrolling": true,
    "C_Cpp.doxygen.generatedStyle": "/**",
    "githubPullRequests.pullBranch": "never",
    "python.analysis.extraPaths": [
        "${env:HOME}/Library/Python/3.13/lib/python/site-packages/",
        "${env:HOME}/Library/Python/3.12/lib/python/site-packages/",
        "${env:HOME}/Library/Python/3.11/lib/python/site-packages/",
        "${env:HOME}/Library/Python/3.10/lib/python/site-packages/",
        "${env:HOME}/Library/Python/3.9/lib/python/site-packages/",
        "${env:HOME}/Library/Python/3.8/lib/python/site-packages/"
    ],
    "chat.tools.terminal.autoApprove": {
        "/^(cat|less|more|head|tail|wc|stat|file|ls|tree)(\\s+.*)?$/": true,
        "/^git\\s+(status|diff|log|show|branch|tag|grep|blame|remote)(\\s+.*)?$/": true,
        "/^(make|ninja)\\s+-n(\\s+.*)?$/": true,
        "/^cmake\\s+.*(--dry-run|-N|--build\\s+.*--target\\s+help).*/": true,
        "/^(gcc|g\\+\\+|clang|clang\\+\\+|python|python3|node|npm|pip|cargo|git|cmake|make|ninja)\\s+--version$/": true,
        "/^(pwd|whoami|uname|env|printenv|df|du|free|uptime|ps|top|htop)(\\s+.*)?$/": true
    },
    "terminal.integrated.suggest.enabled": false,
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4.1",
    "accessibility.signals.chatResponseReceived": {
        "sound": "on"
    },
    "accessibility.signals.chatUserActionRequired": {
        "sound": "on"
    },
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            "text": "write in english"
        }
    ],
    "chat.viewSessions.orientation": "stacked"
}