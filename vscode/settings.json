{
    "files.autoSave": "afterDelay",
    "window.titleBarStyle": "custom",
    "window.customMenuBarAltFocus": false,
    "editor.renderWhitespace": "all",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "[c]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[cpp]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[makefile]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false
    },
    "[html]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[javascript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[xml]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    }
}